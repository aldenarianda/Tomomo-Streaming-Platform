@model Tomomo7.Models.Movie

@{
    ViewData["Title"] = "Delete Movie";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Delete Movie</h1>
<h3 class="text-danger">Are you sure you want to permanently delete this movie?</h3>
<div>
    <h4>@Model.Title</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Release Year</dt>
        <dd class="col-sm-10">@Model.ReleaseYear</dd>
        <dt class="col-sm-2">Genres</dt>
        <dd class="col-sm-10">
            @foreach (var genre in Model.Genres)
            {
                <span class="badge bg-secondary">@genre.GenreName</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="MovieId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>